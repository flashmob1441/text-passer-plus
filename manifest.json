{
  "manifest_version": 3,
  "name": "Умный Вставщик Текста",
  "version": "1.4.0",
  "description": "Сохраняйте текст и вставляйте его в выбранные элементы на разных сайтах.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
    }
  },
  "icons": {
  }
}